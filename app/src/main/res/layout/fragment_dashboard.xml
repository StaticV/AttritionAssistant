<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.staticv.attritionassistant.ui.CounterView
                android:id="@+id/counter_farm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterColor="@android:color/holo_green_light"
                app:counterLabel="@string/label_farm" />

            <com.github.staticv.attritionassistant.ui.CounterView
                android:id="@+id/counter_mill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:counterColor="@android:color/holo_orange_dark"
                app:counterLabel="@string/label_mill" />

            <com.github.staticv.attritionassistant.ui.CounterView
                android:id="@+id/counter_quarry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:counterColor="@android:color/holo_blue_light"
                app:counterLabel="@string/label_quarry" />

            <com.github.staticv.attritionassistant.ui.CounterView
                android:id="@+id/counter_stable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:counterColor="@android:color/holo_purple"
                app:counterLabel="@string/label_stable" />

            <com.github.staticv.attritionassistant.ui.CounterView
                android:id="@+id/counter_forge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:counterColor="@android:color/holo_red_light"
                app:counterLabel="@string/label_forge" />

            <com.github.staticv.attritionassistant.ui.CounterView
                android:id="@+id/counter_palace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:counterColor="@android:color/holo_orange_light"
                app:counterLabel="@string/label_palace" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>